<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.np.ece.assettracking" >

    <!-- required to scan for and connect to Estimote Beacons via Bluetooth -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <!-- required to access Cloud -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />

    <application
        android:name="edu.np.ece.assettracking.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.np.ece.assettracking.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.np.ece.assettracking.NewBeaconActivity"
            android:label="@string/title_activity_new_beacon" />
        <activity
            android:name="edu.np.ece.assettracking.ScanBeaconActivity"
            android:label="@string/title_activity_scan_beacon" />
        <activity
            android:name="edu.np.ece.assettracking.MovieActivity"
            android:label="@string/title_activity_movie" />
        <activity
            android:name="edu.np.ece.assettracking.BeaconListActivity"
            android:label="@string/title_activity_beacon_list" />
        <activity
            android:name="edu.np.ece.assettracking.NewEquipmentActivity"
            android:label="@string/title_activity_new_asset" />
        <activity
            android:name="edu.np.ece.assettracking.NewLocationActivity"
            android:label="@string/title_activity_new_location" >
        </activity>
        <activity
            android:name="edu.np.ece.assettracking.ViewLocationActivity"
            android:label="@string/title_activity_view_location" >
        </activity>
        <activity
            android:name="edu.np.ece.assettracking.PickBeaconActivity"
            android:label="@string/title_activity_pick_beacon" >
        </activity>
        <activity
            android:name="edu.np.ece.assettracking.LocationListActivity"
            android:label="@string/title_activity_location_list" >
        </activity>
        <activity
            android:name="edu.np.ece.assettracking.EquipmentListActivity"
            android:label="@string/title_activity_equipment_list" >
        </activity>
        <activity
            android:name="edu.np.ece.assettracking.ViewEquipmentActivity"
            android:label="@string/title_activity_view_equipment" >
        </activity>
    </application>

</manifest>
